{#
/**
 * @file
 * The theme implementation for the contribution count page.
 *
 * @ingroup themeable
 */
#}

{{ attach_library('ct_reports/ct-style') }}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  <div class="row ct-height">
    <div class="col-md-12 ct-margin">
      <div class="col-md-3 ct-results">
        <p class="ct-label">Total Contributions</p>
        <p class="ct-count">{{ totalContributions | number_format }}</p>
      </div>
      <div class="col-md-3 ct-results">
        <p class="ct-label">Code Contributions</p>
        <p class="ct-count">{{ codeContributions | number_format }}</p>
      </div>
      <div class="col-md-3 ct-results">
        <p class="ct-label">Total Contributors</p>
        <p class="ct-count">{{ totalContributors | number_format }}</p>
      </div>
    </div>
  </div>
  {{ pager }}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
